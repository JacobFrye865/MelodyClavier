{% extends 'base.html.twig' %}

{% block title %}Hello PartitionsController!{% endblock %}

{% block body %}
    Partitions de piano

    {% for partition in partitions %}
        <h1>{{ partition.name }}</h1>
        <img src="{{vich_uploader_asset(partition, 'imageFile') }}">
        <p>{{ partition.description }}</p>
        <small>Cr√©er le: {{ partition.createdAt|date('d/m/y') }}</small>
        <small>Modifier le: {{ partition.updatedAt|date('d/m/y') }}</small>
        <a href="{{ path('partitions.edit', {id: partition.id}) }}">Modifier</a>
        <a href="{{ path('partitions.delete', {id: partition.id}) }}">Suppression</a>
    {% endfor %}
    
{% endblock %}
